@model IEnumerable<LHDBaiThucHanh214.Models.Person>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Thêm mới", "Thêm")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PersonName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PersonName)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Sửa", new { id=item.PersonID }) |
            @Html.ActionLink("Chi Tiết", "Chi Tiết", new { id=item.PersonID }) |
            @Html.ActionLink("Xóa", "Xóa", new { id=item.PersonID })
        </td>
    </tr>
}

</table>
