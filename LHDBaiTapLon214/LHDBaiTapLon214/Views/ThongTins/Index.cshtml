@model IEnumerable<LHDBaiTapLon214.Models.ThongTin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Thêm Mới", "Thêm")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenSinhVien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayThangNam)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
