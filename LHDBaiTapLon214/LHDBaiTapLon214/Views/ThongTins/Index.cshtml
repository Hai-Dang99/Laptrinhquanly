            @Html.DisplayFor(modelItem => item.TenSinhVien)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayThangNam)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Sửa", new { id=item.MaSinhVien }) |
